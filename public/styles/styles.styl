@font-face
  font-family 'go'
  src url('/fonts/go-book.woff') format('woff')
  font-weight normal
  font-style normal

@font-face
  font-family 'go'
  src url('/fonts/go-med.woff') format('woff')
  font-weight bold
  font-style normal

backgroundColor = #F3CCCC
textColor = #980329

*, *:before, *:after
  -moz-box-sizing border-box
  -webkit-box-sizing border-box
  box-sizing border-box

html, body
  width 100%
  height 100%

body
  font-family 'go', sans-serif
  margin 0
  padding 20px
  color textColor
  background backgroundColor


section
  margin 0
  padding 0
  position fixed
  top 50%
  left 50%
  display block
  -webkit-transform translate(-50%, -50%)
  transform translate(-50%, -50%)
  overflow hidden

h1
  font-weight normal
  text-align center
  font-size 72px
  line-height 1
  margin 0
  padding 20px 30px
  border 7px solid white
  color white
  a
    text-decoration none
    color white

h2
  font-weight 300
  padding 0 10px
  text-align center
  font-size 18px
  line-height 1.5
  transition all 0.3s
  color rgba(textColor, 0.7)
  a
    color rgba(textColor, 1)
  &:hover
    opacity 1
    a
      text-decoration underline

a
 color textColor
 text-decoration none

@media (max-width: 480px)
  h1
    font-size 48px
    border-width 4px
  h2
    font-size 16px
